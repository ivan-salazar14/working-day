{
  "name": "colombian-business-date-calculator-api",
  "version": "1.0.0",
  "description": "API for calculating business dates in Colombia",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "mocha --require tsx --recursive test/**/*.test.ts",
    "test:watch": "mocha --require tsx --watch test/**/*.test.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "cdk:bootstrap": "cd cdk && npm run cdk bootstrap",
    "cdk:deploy": "cd cdk && cdk deploy CdkStack --cloudformation-execution-policies arn:aws:iam::177602935194:policy/permisosCDKBootstrap",
    "cdk:synth": "cd cdk &&  npm run cdk synth"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.215.0",
    "constructs": "^10.4.2",
    "date-fns-tz": "^2.0.0",
    "express": "^4.18.0",
    "luxon": "^3.4.0",
    "serverless-http": "^4.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/express": "^4.17.0",
    "@types/luxon": "^3.7.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "chai": "^4.5.0",
    "mocha": "^11.7.2",
    "supertest": "^7.1.4",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}